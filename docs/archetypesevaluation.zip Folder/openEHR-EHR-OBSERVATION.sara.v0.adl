definition
	OBSERVATION[at0000] matches {	-- SARA
		data matches {
			HISTORY[at0001] matches {	-- Event Series
				events cardinality matches {1..*; unordered} matches {
					EVENT[at0002] occurrences matches {0..1} matches {	-- Any event
						data matches {
							ITEM_TREE[at0003] matches {	-- Tree
								items cardinality matches {0..*; unordered} matches {
									CLUSTER[at0004] occurrences matches {0..1} matches {	-- Gait and Balance
										items cardinality matches {1..*; unordered} matches {
											ELEMENT[at0005] occurrences matches {0..1} matches {	-- Gait
												value matches {
													0|[local::at0008], 	-- Normal, no difficulties in walking, turning and walking tandem (up to one misstep allowed)
													1|[local::at0009], 	-- Slight difficulties, only visible when walking 10 consecutive steps in tandem
													2|[local::at0010], 	-- Clearly abnormal, tandem walking >10 steps not possible
													3|[local::at0011], 	-- Considerable staggering, difficulties in half-turn, but without support
													4|[local::at0012], 	-- Marked staggering, intermittent support of the wall required
													5|[local::at0013], 	-- Severe staggering, permanent support of one stick or light support by one arm required
													6|[local::at0014], 	-- Walking > 10 m only with strong support (two special sticks or stroller or accompanying person)
													7|[local::at0015], 	-- Walking < 10 m only with strong support (two special sticks or stroller or accompanying person)
													8|[local::at0029]  	-- Unable to walk, even supported
												}
											}
											ELEMENT[at0006] occurrences matches {0..1} matches {	-- Stance
												value matches {
													0|[local::at0016], 	-- Normal, able to stand in tandem for > 10 s
													1|[local::at0017], 	-- Able to stand with feet together without sway, but not in tandem for > 10s
													2|[local::at0018], 	-- Able to stand with feet together for > 10 s, but only with sway
													3|[local::at0019], 	-- Able to stand for > 10 s without support in natural position, but not with feet together
													4|[local::at0020], 	-- Able to stand for >10 s in natural position only with intermittent support
													5|[local::at0026], 	-- Able to stand >10 s in natural position only with constant support of one arm
													6|[local::at0027]  	-- Unable to stand for >10 s even with constant support of one arm
												}
											}
											ELEMENT[at0007] occurrences matches {0..1} matches {	-- Sitting
												value matches {
													0|[local::at0021], 	-- Normal, no difficulties sitting >10 sec
													1|[local::at0022], 	-- Slight difficulties, intermittent sway
													2|[local::at0023], 	-- Constant sway, but able to sit > 10 s without support
													3|[local::at0024], 	-- Able to sit for > 10 s only with intermittent support
													4|[local::at0025]  	-- Unable to sit for >10 s without continuous support
												}
											}
										}
									}
									CLUSTER[at0031] occurrences matches {0..1} matches {	-- Speech Disturbance
										items cardinality matches {1..*; unordered} matches {
											ELEMENT[at0032] occurrences matches {0..1} matches {	-- Speech Disturbance
												value matches {
													0|[local::at0033], 	-- Normal
													1|[local::at0034], 	-- Suggestion of speech disturbance
													2|[local::at0035], 	-- Impaired speech, but easy to understand
													3|[local::at0036], 	-- Occasional words difficult to understand
													4|[local::at0037], 	-- Many words difficult to understand
													5|[local::at0038], 	-- Only single words understandable
													6|[local::at0039]  	-- Speech unintelligible / anarthria
												}
											}
										}
									}
									CLUSTER[at0040] occurrences matches {0..1} matches {	-- Upper and Lower Limb Coordination
										items cardinality matches {1..*; unordered} matches {
											CLUSTER[at0041] occurrences matches {0..1} matches {	-- Finger chase
												items cardinality matches {1..*; unordered} matches {
													ELEMENT[at0045] occurrences matches {0..1} matches {	-- Finger chase-right hand
														value matches {
															0|[local::at0048], 	-- No dysmetria
															1|[local::at0049], 	-- Dysmetria, under/ overshooting target <5 cm
															2|[local::at0050], 	-- Dysmetria, under/ overshooting target < 15 cm
															3|[local::at0051], 	-- Dysmetria, under/ overshooting target > 15 cm
															4|[local::at0052]  	-- Unable to perform 5 pointing movements
														}
													}
													ELEMENT[at0046] occurrences matches {0..1} matches {	-- Finger chase-left hand
														value matches {
															0|[local::at0048], 	-- No dysmetria
															1|[local::at0049], 	-- Dysmetria, under/ overshooting target <5 cm
															2|[local::at0050], 	-- Dysmetria, under/ overshooting target < 15 cm
															3|[local::at0051], 	-- Dysmetria, under/ overshooting target > 15 cm
															4|[local::at0052]  	-- Unable to perform 5 pointing movements
														}
													}
													ELEMENT[at0047] occurrences matches {0..1} matches {	-- Finger chase-mean of both sides
														value matches {
															DV_COUNT matches {
																magnitude matches {|0..4|}
															}
														}
													}
												}
											}
											CLUSTER[at0042] occurrences matches {0..1} matches {	-- Nose-finger test
												items cardinality matches {1..*; unordered} matches {
													ELEMENT[at0053] occurrences matches {0..1} matches {	-- Nose-finger test-right hand
														value matches {
															0|[local::at0056], 	-- No tremor
															1|[local::at0057], 	-- Tremor with an amplitude < 2 cm
															2|[local::at0058], 	-- Tremor with an amplitude < 5 cm
															3|[local::at0059], 	-- Tremor with an amplitude > 5 cm
															4|[local::at0060]  	-- Unable to perform 5 pointing movements
														}
													}
													ELEMENT[at0054] occurrences matches {0..1} matches {	-- Nose-finger test-left hand
														value matches {
															0|[local::at0056], 	-- No tremor
															1|[local::at0057], 	-- Tremor with an amplitude < 2 cm
															2|[local::at0058], 	-- Tremor with an amplitude < 5 cm
															3|[local::at0059], 	-- Tremor with an amplitude > 5 cm
															4|[local::at0060]  	-- Unable to perform 5 pointing movements
														}
													}
													ELEMENT[at0055] occurrences matches {0..1} matches {	-- Nose-finger test-mean of both sides
														value matches {
															DV_COUNT matches {
																magnitude matches {|0..4|}
															}
														}
													}
												}
											}
											CLUSTER[at0043] occurrences matches {0..1} matches {	-- Fast alternating hand movements 
												items cardinality matches {1..*; unordered} matches {
													ELEMENT[at0066] occurrences matches {0..1} matches {	-- Fast alternating hand movements-right hand
														value matches {
															0|[local::at0069], 	-- Normal, no irregularities (performs <10s)
															1|[local::at0070], 	-- Slightly irregular (performs <10s)
															2|[local::at0071], 	-- Clearly irregular, single movements difficult to distinguish or relevant interruptions, but performs <10s
															3|[local::at0072], 	-- Very irregular, single movements difficult to distinguish or relevant interruptions, performs >10s
															4|[local::at0073]  	-- Unable to complete 10 cycles
														}
													}
													ELEMENT[at0067] occurrences matches {0..1} matches {	-- Fast alternating hand movements-left hand
														value matches {
															0|[local::at0069], 	-- Normal, no irregularities (performs <10s)
															1|[local::at0070], 	-- Slightly irregular (performs <10s)
															2|[local::at0071], 	-- Clearly irregular, single movements difficult to distinguish or relevant interruptions, but performs <10s
															3|[local::at0072], 	-- Very irregular, single movements difficult to distinguish or relevant interruptions, performs >10s
															4|[local::at0073]  	-- Unable to complete 10 cycles
														}
													}
													ELEMENT[at0068] occurrences matches {0..1} matches {	-- Fast alternating hand movements-mean of both sides
														value matches {
															DV_COUNT matches {
																magnitude matches {|0..4|}
															}
														}
													}
												}
											}
											CLUSTER[at0044] occurrences matches {0..1} matches {	-- Heel-shin slide
												items cardinality matches {1..*; unordered} matches {
													ELEMENT[at0074] occurrences matches {0..1} matches {	-- Heel-shin slide-right hand
														value matches {
															0|[local::at0077], 	-- Normal
															1|[local::at0078], 	-- Slightly abnormal, contact to shin maintained
															2|[local::at0079], 	-- Clearly abnormal, goes off shin up to 3 times during 3 cycles
															3|[local::at0080], 	-- Severely abnormal, goes off shin 4 or more times during 3 cycles
															4|[local::at0081]  	-- Unable to perform the task
														}
													}
													ELEMENT[at0075] occurrences matches {0..1} matches {	-- Heel-shin slide-left hand
														value matches {
															0|[local::at0077], 	-- Normal
															1|[local::at0078], 	-- Slightly abnormal, contact to shin maintained
															2|[local::at0079], 	-- Clearly abnormal, goes off shin up to 3 times during 3 cycles
															3|[local::at0080], 	-- Severely abnormal, goes off shin 4 or more times during 3 cycles
															4|[local::at0081]  	-- Unable to perform the task
														}
													}
													ELEMENT[at0076] occurrences matches {0..1} matches {	-- Heel-shin slide-mean of both sides
														value matches {
															DV_COUNT matches {
																magnitude matches {|0..4|}
															}
														}
													}
												}
											}
										}
									}
									ELEMENT[at0028] occurrences matches {0..1} matches {	-- Sara Total Score
										value matches {
											DV_COUNT matches {
												magnitude matches {|0..40|}
											}
										}
									}
									ELEMENT[at0088] occurrences matches {0..1} matches {	-- Date
										value matches {
											DV_DATE matches {
												value matches {yyyy-mm-dd}
											}
										}
									}
								}
							}
						}
					}
				}
			}
		}
	}

