					text = <"Able to stand for > 10 s without support in natural position, but not with feet together">
					description = <"*">
				>
				["at0020"] = <
					text = <"Able to stand for >10 s in natural position only with intermittent support">
					description = <"*">
				>
				["at0021"] = <
